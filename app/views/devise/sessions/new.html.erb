<%= render "shared/header" %>

<%= form_with model: @user, url: user_session_path, class: 'session-main', local: true do |f| %>
<div class="login-wrap">
  <div class="login-html">
    <input id="tab-2" type="radio" name="tab" class="sign-up"><label for="tab-2" class="tab">ログイン</label>
    <div class="login-form">
      <%# ログイン画面 %>
      <div class="sign-up-htm">
        <div class="group">
          <label for="pass" class="label">パスワード</label>
          <%= f.password_field :password, class:"input", id:"pass", placeholder:"6文字以上の半角英数字" %>
        </div>
        <div class="group">
          <label for="pass" class="label">メールアドレス</label>
          <%= f.text_field :email, class:"input", id:"pass", placeholder:"PC・携帯どちらでも可", autofocus: true %>
        </div>
        <div class="group">
          <input id="check" type="checkbox" class="check" checked>
          <label for="check"><span class="icon"></span> ログインしたままですか？</label>
        </div>
        <div class="group">
          <input type="submit" class="button" value="ログイン">
        </div>
        <div class="hr"></div>
        <div class="foot-lnk">
          <a href="#forgot">パスワードをお忘れですか?</a>
        </div>
      </div>
    </div>
  </div>
</div>
<% end %>
<%= render "shared/footer" %>