<%= render "shared/header" %>

<%= form_with model: @user, url: user_registration_path, class: 'registration-main', local: true do |f| %>
<div class="login-wrap">
  <div class="login-html">
    <input id="tab-2" type="radio" name="tab" class="sign-up"><label for="tab-2" class="tab">新規登録</label>
    <div class="login-form">
        <%# 新規登録画面 %>
      <div class="sign-up-htm">
        <div class="group">
          <label for="user" class="label">ユーザー名</label>
          <%= f.text_field :nickname, class:"input", id:"nickname", placeholder:"例)ミンパク太郎", maxlength:"40" %>
        </div>
        <div class="group">
          <label for="pass" class="label">パスワード</label>
          <%= f.password_field :password, class:"input", id:"pass", placeholder:"6文字以上の半角英数字" %>
        </div>
        <div class="group">
          <label for="pass" class="label">同じパスワードを入力して下さい</label>
          <%= f.password_field :password_confirmation, class:"input", id:"pass", placeholder:"同じパスワードを入力して下さい" %>
        </div>
        <div class="group">
          <label for="pass" class="label">メールアドレス</label>
          <%= f.text_field :email, class:"input", id:"pass", placeholder:"PC・携帯どちらでも可", autofocus: true %>
        </div>
        <div class="group">
          <input type="submit" class="button" value="新規登録">
        </div>
        <div class="hr"></div>
        <div class="foot-lnk">
          <label for="tab-1">既に登録済みですか?</a>
        </div>
      </div>
    </div>
  </div>
</div>
<% end %>
